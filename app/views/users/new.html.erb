<div class="text-center">
  <!-- Displays the page's header -->
  <h1 class="mb-4">Sign up ðŸŽ¬</h1>

  <!-- Checks if there are any errors -->
  <% if @user.errors.any? %>
  <!-- If there are any, they are displayed in an ordered list -->
    <ol>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>
  <% end %>

  <!-- Added a form which has fields for username, email, password and password confirmation -->
  <%= form_for @user do |f| %>
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-control mb-3" %>

    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control mb-3" %>

    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control mb-3" %>

    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, class: "form-control mb-3" %>
    
    <div class="text-center mt-3">
      <!-- The submit button has a 'Sign up!' label and a class attribute to style the button -->
      <%= f.submit "Sign up!", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
