<!-- Header section -->
<h1>All Reviews</h1>

<!-- Table section -->
<table>
  <thead>
    <tr>
      <!-- Column headings -->
      <th>Title</th>
      <th>Body</th>
      <th>Rating</th>
      <th>Movie</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <!-- Loop through each review in the @reviews collection and display the details in a table row -->
      <tr>
        <td><%= review.title %></td>
        <td><%= review.body %></td>
        <td><%= review.rating %></td>
        <!-- Link to the movie that the review is associated with -->
        <td><%= link_to review.movie.title, review.movie %></td>
        <td>
          <!-- Links to view, edit and delete the review -->
          <%= link_to 'View', review_path(review) %>
          <%= link_to 'Edit', edit_review_path(review) %>
          <%= link_to 'Delete', review_path(review), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- Link to add a new review -->
<%= link_to 'Add New Review', new_review_path %>
