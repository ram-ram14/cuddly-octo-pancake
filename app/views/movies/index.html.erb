<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="movies">
        <% @movies.each do |movie| %>
          <div class="movie">
          <% if movie.poster_image != 'N/A' %>
            <%= image_tag movie.poster_image %>
          <% end %>
          <h2><%= movie.title %></h2>
          <p><strong>Director:</strong> <%= movie.director %></p>
          <p><strong>Released:</strong> <%= movie.release_date %></p>
          <p><strong>Runtime:</strong> <%= movie.runtime %></p>
          <p><strong>Plot:</strong> <%= movie.plot %></p>
          <%= link_to 'Add a review', movie_path(movie.id) %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="row justify-content-center mt-5">
    <div class="col-md-8">
      <%= form_tag movies_path, :method => 'get' do  %>
        <div class="form-group">
          <%= label_tag :search, 'Movie Title' %>
          <%= text_field_tag :search, nil, class: "form-control" %>
        </div>
        <%= submit_tag 'Search', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
