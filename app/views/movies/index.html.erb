<div class="movies">
  <% @movies.each do |movie| %>
    <div class="movie">
    <% if movie.poster_image != 'N/A' %>
      <%= image_tag movie.poster_image %>
       <% end %>
    </div>
  <% end %>
</div>

<%# paginate @movies %>

<%= form_tag movies_path, :method => 'get' do  %>
  <%= label_tag :search, 'Movie Title' %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search' %>
<% end %>
