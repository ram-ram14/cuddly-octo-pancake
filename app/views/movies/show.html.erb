<% if @movie.reviews.any? %>
  <h3>Reviews:</h3>
  <% @movie.reviews.each do |review| %>
    <p>
      <%= review.user.username %>: <%= review.content %> (Rating: <%= review.rating %>)
    </p>
  <% end %>
<% end %>
<%= link_to 'Add a review', new_movie_review_path(@movie), class: 'btn btn-primary' %>
